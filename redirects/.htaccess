# https://httpd.apache.org/docs/current/mod/mod_rewrite.html
<IfModule mod_rewrite.c>
  RewriteEngine on
  
  RewriteBase "/redirects"

  # old file does not exist; rewrite permanently
  RewriteRule "content/old-index.html" "content/index.html" [L,R=301]
  
  # rewrite files who do not exist and directories without index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME}/index.html !-f

  # rewrite anything else to base dir
  RewriteRule ^(.*)$ / [L,R=302]
</IfModule>